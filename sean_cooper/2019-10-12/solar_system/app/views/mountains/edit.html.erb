<h1>Edit Movie</h1>

<form action="<%= mountain_path(@mountain.id) %>" method="post">
  <div class="form-group row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Mountain name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control-plaintext" name="name" value="<%= @mountain.name %>">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Image URL</label>
    <div class="col-sm-10">
      <input type="url" class="form-control" name="image" value="<%= @mountain.image %>">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Description</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="description" value="<%= @mountain.description %>">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Rating</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="rating" value="<%= @mountain.rating %>">
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Confirm Edit</button>
</form>