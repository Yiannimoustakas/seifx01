<h1><%= @ocean.name %></h1>

<%= image_tag @ocean.image, :class => 'feature' if @ocean.image.present? %>

<ul>
  <li>Name: <%= @ocean.name %></li>
  <li>Image: <%= @ocean.image %></li>
  <li>Description: <%= @ocean.description %></li>
  <li>Rating: <%= @ocean.rating %></li>
</ul>

<div class="controls">
  <%= link_to 'Edit ocean', ocean_edit_path(@ocean.id) %>
  <%= button_to 'Delete ocean', ocean_path(@ocean.id), :method => 'delete', :data => {:confirm => 'Are you sure?'} %>
</div>
