
<div class="card">
    <div class="container">
        <div class="row">
            <div class="col-10 card-body">
            <form class="form" method="post" action="/tools/<%= @tool['tool_name'] %>">

                <h2>Edit Tool: <%= @tool['tool_name'] %></h2>
                <div class="form-group col-6">
                    <label for="tool_name" class="col-form-label">Tool's name</label>
                    <input type="text" class="form-control" id="tool_name" value="<%= @tool['tool_name']%>">
                </div>
                <div class="form-group col-6">
                    <label for="url">Tool's website</label>
                    <input type="text" class="form-control" id="url" value="<%= @tool['website']%>">
                </div>
                <div class="form-group col-6">
                    <label for="img">Tool's logo</label>
                    <div class="custom-file"">
                        <input type="file" class="custom-file-input" id="img">
                        <label class="custom-file-label" for="img">Choose image</label>
                    </div>
                </div>
                <div class="form-group col-12">
                    <label for="url">Tool's description</label>
                    <textarea class="form-control" id="tool_des" cols="50" rows="5"><%= @tool['tool_des']%></textarea>
                </div>
                
            </div>
            <div class="col-2 card-body menu">
                    <input type="submit" class="btn btn-outline-light" value="Save"/>
                </form>
                <input type="submit" class="btn btn-outline-light" value="Cancel" onclick="location.href='/tools/<%= @tool['tool_name']%>';"/>
            </div>
        </div>
    </div>
</div>